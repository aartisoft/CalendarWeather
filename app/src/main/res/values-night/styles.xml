<resources>

    <!-- Base application theme. -->
    <!--   START THEME NIGHT MODE   -->
    <style name="AppTheme.Picker" parent="Theme.AppCompat.Light.NoActionBar" >
        <item name="android:textColorPrimary">@color/orange</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:colorControlNormal">@android:color/transparent</item>


    </style>
    <!--   END THEME NIGHT MODE   -->

    <style name="RatingBar" parent="Theme.AppCompat">
        <item name="colorControlNormal">@color/orange</item>
        <item name="colorControlHighlight">@color/orange</item>
        <item name="colorControlActivated">@color/orange</item>
    </style>

    <style name="TextAppearance.Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="CardViewStyle" parent="CardView">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginRight">@dimen/card_view_margin</item>
        <item name="android:layout_marginLeft">@dimen/card_view_margin</item>
        <item name="cardCornerRadius">@dimen/card_view_card_corner_radius</item>
        <item name="cardElevation">@dimen/card_view_card_elevation</item>
        <item name="cardPreventCornerOverlap">false</item>
    </style>
</resources>
